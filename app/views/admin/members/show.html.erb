<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h3 class="my-5"><%= @member.nickname %>'s Member details</h3>
        <div class="d-flex align-items-center">
          <table class="table table-borderless">
            <tr>
              <th class="text-center">Member ID</td>
              <td><%= @member.id %></td>
            </tr>
            <tr>
              <th class="text-center">Nickname</th>
              <td><%= @member.nickname %></td>
            </tr>
            <tr>
              <th class="text-center">Birthday</th>
              <td><%= @member.birthday %></td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= link_to "編集する", edit_admin_member_path, class:"btn btn-success" %>
                <%= link_to "メンバー一覧を", admin_root_path, class:"btn btn-primary" %>
              </td>
            </tr>

          </table>
      </div>
    </div>
  </div>
</div>