<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h3 class="my-5"><i class="fa-solid fa-list"></i> Quest list</h3>
    </div>

    <div class="col-sm-2 px-sm-0 text-right mt-5">
      <%= link_to "Create a quest", new_admin_quest_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 offset-1">
      <table class="table table-hover mb-5">
        <thead>
          <tr>
            <th>Quest ID</strong></th>
            <th>Quest Name</th>
            <th>Level</th>
            <th>Quest Reward</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @quests.each do |quest| %>
            <tr>
              <td><%= quest.id %></td>
              <td><%= link_to quest.name, admin_quest_path(quest.id), :style=>"color:gray; text-decoration:none;" %></td>
              <td><%= link_to quest.level_i18n, admin_quest_path(quest.id), :style=>"color:gray; text-decoration:none;" %></td>
              <td><%= quest.price.to_i.round.to_s(:delimited, delimiter: ',') %>  G</td>
              <td><%= quest.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @quests, theme: 'bootstrap-5' %>
</div>