<div class="container mt-5">
 <div class="text-center">
  <h2 class= "my-3">Quests</h2>
  <% if @quests.count > 0 %>
    <div class="row">
      <% @quests.each do |quest| %>
        <div class="col-md-4">
          <div class="card">
            <%= image_tag quest.get_image(250,250), fallback: "noimage.jpg", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title">
                <%= quest.name %>
              </h5>
              <div class="card-text">
                <div>
                  <%= quest.level_i18n %>
                </div>
                <div>
                  <%= quest.price.to_i.to_s(:delimited, delimiter: ',') %>Ｇ
                </div>
              </div>
            </div>
            <div class="card-footer text-center">
              <%= link_to 'Complete!', quests_complete_path(quest), class: 'btn btn-primary' %>
              <%= link_to 'Give up…', quests_giveup_path(quest), method: :delete, data: {confirm: "え？ほんとにやめるの？"}, class:'text-danger btn btn-secondary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h4>Nothing... <i class="fa-regular fa-face-sad-tear"></i></h4>
  <% end %>
 </div>

  <div class="row">
    <div class="col">
      <h3 class="my-5"><i class="fa-solid fa-child-reaching"></i>  <%= current_member.nickname %>'s Member details  <i class="fa-solid fa-child-reaching"></i></h3>
        <div class="d-flex align-items-center">
          <table class="table table-borderless">
            <tr>
              <th class="text-center">Member ID</td>
              <td><%= current_member.id %></td>
            </tr>
            <tr>
              <th class="text-center">Nickname</th>
              <td><%= current_member.nickname %></td>
            </tr>
            <tr>
              <th class="text-center">Birthday</th>
              <td><%= current_member.birthday %></td>
            </tr>
            <tr>
              <td>
                <%#= link_to "Edit", edit_admin_member_path, class:"btn btn-success" %>
                <%#= link_to "Back", admin_members_path, class:"btn btn-primary" %>
              </td>
            </tr>

          </table>
      </div>
    </div>
  </div>
</div>