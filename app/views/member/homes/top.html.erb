<div class="container mt-5 mr-5 ml-5">
  <div class="row">
    <div class="col-md-10">
      <h3><i class="fa-solid fa-list"></i> Quests list</h3><h5>(全<%= @total_quests.count %>件)</h5>
        <div class="row">
          <% @quests.each do |quest| %>
          <div class="col-md-3 mt-5">
            <%= link_to quest_path(quest) do %>


            <div class="card mb-3">
              <%= image_tag quest.get_image(250,250), fallback: "noimage.jpg", class: "card-img-top" %>
            <div class="card-body">
            <h5 class="card-title"><%= quest.name %></h5>
            <p class="card-text"><%= quest.level_i18n %></p>
            <% if quest.status == true %>
            <p class="card-text">
              <%= (quest.price * 1.1).to_i.to_s(:delimited, delimiter: ',') %>Ｇ
            </p>
            <% else %>
            <p class="card-text">
             <!--クエスト受注済の場合は一覧から消したい-->
            </p>
            <% end %>

            </div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
    </div>
  </div>
      <%= paginate @quests, theme: 'bootstrap-5' %>
</div>