<div class="container my-5">
  <div class="row">
    <div class=col>
      <div class="col-6 offset-3">
        <h3>Please log in</h3>
          <h6 class="my-3">メンバーはこちらからログイン</h6>

        <%= form_with model: @member, url: new_member_session_path, local: true do |f| %>

        <div class="field my-2">
          <%= f.label :"ニックネーム", class: "form-label mt-3" %><br>
          <%= f.text_field :nickname, autofocus: true, placeholder: "たろう", autocomplete: "nickname", class: "form-control" %>
          <!--autocomplete： "カラム名"とは自動で入力補助をしてくれる機能-->
        </div>

        <div class="field mt-2 mb-5">
          <%= f.label :"たんじょうび", class: "form-label mt-3" %><br>
          <%= raw sprintf(f.date_select( :birthday, prefix:'member', prompt:"えらんでね", use_month_numbers:true, start_year:Time.now.year, end_year:2000, date_separator:'%s'),'年','月')+'日' %>
        </div>

        <div class="actions my-3 text-center">
          <%= f.submit "Log in", class: "btn btn-danger" %>
        </div>

        <% end %>

        <div>
          <h6 class="text-center">メンバーになってない人は</h6>
          <p class="text-center"><%= link_to "こちら", new_member_registration_path %>からログインしてね。</p>
        </div>

      </div>
    </div>
  </div>
</div>

