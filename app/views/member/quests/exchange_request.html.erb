<div class="container">
  <h2 class="text-center my-5">
    <i class="fa-solid fa-coins"></i><i class="fa-solid fa-rotate-left"></i> Exchange Request
  </h2>

  <div class="row">
    <div class="col-md-6 mx-auto">
      <h5>You have Gold:  <strong><%= @have_gold %> G</strong></h5>
      <%= form_with model: @exchange_request, url: exchange_requests_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :request_amount %>
          <%= f.number_field :request_amount, min: 0, max: @have_gold, value: 0, class: 'form-control form-control-lg' %>
        </div>

        <div class="form-group">
          <%= f.submit "G → ¥ 換金しまーす", name: 'post', class: 'mr-5 btn btn-warning' %>
        </div>
      <% end %>
  </div>
</div>